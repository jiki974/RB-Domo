public class chenillard implements Runnable{

	
        public boolean end = false;
	public int i=1;

	@Override	
	public void run() {
		// TODO Auto-generated method stub
		System.out.println("Hello from a thread!");
               		while (!end) {


			try {				
				
                    try {
                        BufferedImage myPicture;
                        myPicture = ImageIO.read(new File("C:/Users/taekeso-kensei/Pictures/soleil.bmp"));
                   JLabel picLabel = new JLabel(new ImageIcon( myPicture ));
    add( picLabel );
    picLabel.setVisible(true);
                    
                    } catch (IOException ex) {
                        Logger.getLogger(chen.class.getName()).log(Level.SEVERE, null, ex);
                    }
   
				switch(i){
				case (1): jCheckBox1.setVisible(true);jCheckBox2.setVisible(false);jCheckBox3.setVisible(false);jCheckBox4.setVisible(false);break;
				case (2): jCheckBox1.setVisible(false);jCheckBox2.setVisible(true);jCheckBox3.setVisible(false);jCheckBox4.setVisible(false);break;
				case (3): jCheckBox1.setVisible(false);jCheckBox2.setVisible(false);jCheckBox3.setVisible(true);jCheckBox4.setVisible(false);break;
				case (4): jCheckBox1.setVisible(false);jCheckBox2.setVisible(false);jCheckBox3.setVisible(false);jCheckBox4.setVisible(true);break;
				}
				i++;
				if(i>4)i=1;
				
				Thread.sleep(250);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}

	}


}

 
